%h1 Listing tasks

%table.table.table-striped.table-hover.table-border.task-table
  %thead
    %tr
      %th Action item
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.action_item
        %td.clearfix
          .pull-right
            = link_to edit_task_path(task), class: "btn btn-primary" do
              %i.fa.fa-pencil
            = link_to task, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: "btn btn-danger" do
              %i.fa.fa-trash-o

%br

= link_to 'New Task', new_task_path, class: "btn btn-primary"
