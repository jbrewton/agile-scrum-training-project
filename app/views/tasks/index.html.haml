%h1 Listing tasks

%table.table.table-striped.table-hover.table-border.task-table
  %thead
    %tr
      %th Action item
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.action_item
        %td= link_to 'Show', task, class: "btn btn-info btn-block"
        %td= link_to 'Edit', edit_task_path(task), class: "btn btn-primary btn-block"
        %td= link_to 'Destroy', task, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: "btn btn-danger btn-block"

%br

= link_to 'New Task', new_task_path, class: "btn btn-primary"
